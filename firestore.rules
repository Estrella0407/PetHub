rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isDocumentOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/branch/$(request.auth.uid));
    }

    // 1. CUSTOMER
    match /customer/{customerId} {
      allow read, update: if isDocumentOwner(customerId) || isAdmin();
      allow create: if isSignedIn();

      match /cart/{cartItemId} {
         allow read, write: if isDocumentOwner(customerId);
      }
    }

    // 2. PET
    match /pet/{petId} {
       allow create: if isSignedIn(); // Simplified for safer creation
       allow read, update, delete: if isAdmin() || (isSignedIn() && resource.data.custId == request.auth.uid);
    }

    // 3. BRANCH
    match /branch/{branchId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
      match /branch_services/{docId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // 4. APPOINTMENT
    match /appointment/{appointmentId} {
      allow create: if isSignedIn();
      allow get, list: if isAdmin() || (isSignedIn() && (resource.data.custId == request.auth.uid || resource.data.branchId == request.auth.uid));
      allow update, delete: if isAdmin() || (isSignedIn() && resource.data.custId == request.auth.uid);
    }

    // 5. SERVICE
    match /service/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 6. NOTIFICATION
    match /notification/{notificationId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin() || (isSignedIn() && resource.data.custId == request.auth.uid);
    }

    // 7. PRODUCT
    match /product/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 8. ORDERS
    match /order/{orderId} {
      // Use request.resource to check the incoming data during creation
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.custId;
      allow read: if isAdmin() || (isSignedIn() && resource.data.custId == request.auth.uid);
    }

    // 9. PRODUCT ORDERS
    match /productOrder/{productOrderId} {
       // CRITICAL FIX: Allow creation if logged in (Trust the batch)
       allow create: if isSignedIn();
       
       // Secure read using the dynamic lookup
       allow read: if isAdmin() || (
         isSignedIn() && 
         get(/databases/$(database)/documents/order/$(resource.data.orderId)).data.custId == request.auth.uid
       );
    }

    // 10. BRANCH PRODUCT
    match /branchProduct/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
