rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Check for custom claim 'admin' OR existence in 'branches' collection
      // Note: Checking existence in 'branches' via rules requires get() which costs 1 read.
      return isSignedIn() && (
        request.auth.token.admin == true || 
        exists(/databases/$(database)/documents/branches/$(request.auth.uid))
      );
    }

    // ============================================================================
    // NEW SCHEMA RULES
    // ============================================================================

    // 1. CUSTOMER
    match /customer/{custId} {
      allow read, write: if isOwner(custId) || isAdmin();

      // Subcollection: PET
      // Since PetRepository accesses pets as a subcollection of customers
      match /pet/{petId} {
        allow read, write: if isOwner(custId) || isAdmin();
      }
    }

    // 2. BRANCH
    match /branch/{branchId} {
      allow read: if true; // Public can read branches (to select one)
      allow write: if isAdmin();
    }

    // 3. APPOINTMENT
    match /appointment/{appointmentId} {
      // Allow read/write if the appointment belongs to the user (custId match)
      allow read: if resource.data.custId == request.auth.uid || isAdmin();
      
      // Create: Allow if user sets their own ID as custId
      allow create: if request.resource.data.custId == request.auth.uid || isAdmin();
      
      // Update/Delete: Allow if user owns it
      allow update, delete: if resource.data.custId == request.auth.uid || isAdmin();
      
      // Branch access: Branches can read/write appointments for their branchId
      allow read, write: if resource.data.branchId == request.auth.uid; 
    }

    // 4. SERVICE (Public read, Admin/Branch write)
    match /service/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 5. BRANCH SERVICE (Junction table)
    match /branch_service/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
