rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================================================
    // HELPER FUNCTIONS
    // ============================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isSignedIn() && (request.auth.token.keys().hasAny(['admin']) && request.auth.token.admin == true);
    }

    // ============================================================================
    // RULES
    // ============================================================================

    // 1. CUSTOMER
    match /customer/{custId} {
      allow read, write: if isOwner(custId) || isAdmin();
    }

    // 2. PET
    match /pet/{petId} {
       allow create: if request.resource.data.custId == request.auth.uid || isAdmin();
       allow read, update, delete: if resource.data.custId == request.auth.uid || isAdmin();
    }

    // 3. BRANCH
    match /branch/{branchId} {
      allow read: if isSignedIn();

      // Only the branch owner (whose UID matches the document ID) or a super-admin can edit.
      allow write: if request.auth.uid == branchId || isAdmin();

      // Subcollection: BRANCH_SERVICES
      match /branch_services/{docId} {
        allow read: if true;
        allow write: if request.auth.uid == branchId || isAdmin();
      }
    }


    // 4. APPOINTMENT
    match /appointment/{appointmentId} {
      allow read: if resource.data.custId == request.auth.uid ||
                     resource.data.branchId == request.auth.uid ||
                     isAdmin();

      allow create: if request.resource.data.custId == request.auth.uid || isAdmin();

      allow update, delete: if resource.data.custId == request.auth.uid ||
                               resource.data.branchId == request.auth.uid ||
                               isAdmin();
    }

    // 5. SERVICE
    match /service/{serviceId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // 6. NOTIFICATION
    match /notification/{notificationId} {
      allow read, write: if resource.data.userId == request.auth.uid || isAdmin();
    }
  }
}
